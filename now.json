{
  "version": 2,
  "builds": [
    {
      "src": "index.php",
      "use": "@barnebys/php",
      "config": {
        "composerVersion": "1.8.0",
        "composerJson": "composer.json",
        "documentRoot": "/index.php",
        "staticRegexps": [
          "/.css$/",
          "/.gif$/",
          "/.ico$/",
          "/.js$/",
          "/.jpg$/",
          "/.png$/",
          "/.svg$/",
          "/.woff$/",
          "/.woff2$/"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/", "dest": "/" },
    { "src": "/(.*)", "dest": "/" }
  ]
}